@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-12 col-md-12 bg-light border-left" style="margin-left:90px; width:1060px;">

                    <div class="card-body p-t-30">
                        <div class="card b-all shadow-none">
                            <form method="post" asp-action="addrole" asp-controller="roles">
                                <div class="input-group">
                                    <input name="roleName" class="form-control w-25">
                                    <span class="input-group-btn">
                                        <button class="btn btn-info"style="margin-top: 100px;">Add New Role</button>
                                    </span>
                                </div>
                            </form>
                            <hr />
                            <div class="inbox-center table-responsive" style="margin-top:50px; margin-left:20px;">
                                <table class="table table-hover no-wrap">
                                    <thead>
                                        <tr>
                                            <th>
                                                Role
                                            </th>
                                            <th>
                                                Id
                                            </th>
                                            <th style="width:10%">
                                                Actions
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var role in Model)
                                        {
                            <tr>
                                <td>
                                    @role.Name
                                </td>
                                <td>
                                    @role.Id
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <a class="" style='margin-right:16px' asp-controller="Permission" asp-action="Index" asp-route-roleId="@role.Id">
                                            <i class="ti-settings"></i> Manage Permissions
                                        </a>
                                    </div>
                                </td>
                            </tr>}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>