@model FiboSchool.Src.Dto.SectionSetupDto
@{
    Layout = null;
    ViewBag.Title = "Create";
}

<form asp-action="Update" asp-controller="SectionSetup" method="post" id="messageModal" class="frmValidation" novalidate>
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
     <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="product-payment-inner-st">
            <ul id="myTabedu1" class="tab-review-design">
                <li class="active"><a href="#BasicDetails"> Update Section </a></li>
            </ul>


            <div id="myTabContent" class="tab-content custom-product-edit">
                <div class="product-tab-list tab-pane fade active in" id="BasicDetails">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="review-content-section">
                                    @Html.AntiForgeryToken()

                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="form-group">
                                               <label>Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="Name" autocomplete="off" placeholder="Enter a Section." required />
                
                
               </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="payment-adress" style="float:right">
                                                <button class="btn btn-success" type="submit" href="#"><i class="fa fa-check edu-checked-pro">Submit</i></button>
                                <button class="btn btn-danger" type="submit" href="#"><i class="fa fa-times edu-danger-error"data-dismiss="modal">Cancel</i></button>
                                           
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        Array.prototype.filter.call($('.frmValidation'), function (form) {
            $('#btnSubmit').click(function () {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                    form.classList.add('was-validated');
                    return false;
                }
                else {
                    return true;
                }


            });
        });
    });
</script>

