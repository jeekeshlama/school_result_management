@model FiboSchool.Src.Dto.SessionSetupDto
@{
    Layout = null;
    ViewBag.Title = "Create";
}

<form asp-action="Update" asp-controller="Session" method="post" id="messageModal" class="frmValidation" novalidate>
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-close-area modal-close-df">
            </div>
            <div class="modal-body">
                <h2>Update Section</h2>
                <div class="form-group-inner">
                    <label>Name</label>
                    <input type="text" asp-for="Session" class="form-control" id="Name" autocomplete="off" placeholder="Enter a Session." required />
                </div>
            </div>

            <div class="modal-footer info-md">
               <button class="btn btn-success" type="submit" href="#"><i class="fa fa-check edu-checked-pro">Submit</i></button>

                                <button class="btn btn-danger" type="submit" href="#"><i class="fa fa-times edu-danger-error"data-dismiss="modal">Cancel</i></button>
            </div>
        </div>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        Array.prototype.filter.call($('.frmValidation'), function (form) {
            $('#btnSubmit').click(function () {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                    form.classList.add('was-validated');
                    return false;
                }
                else {
                    return true;
                }


            });
        });
    });
</script>

