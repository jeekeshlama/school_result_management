@model FiboSchool.Src.ViewModel.SessionSetupViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="breadcome-list">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="breadcome-heading">

                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <ul class="breadcome-menu">
                                        <li>
                                            <a href="#">Home</a> <span class="bread-slash">/</span>
                                        </li>
                                        <li>
                                            <span class="bread-blod">Session </span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        <div class="sparkline13-list" style="margin-left:90px;">
            <div class="product-status-wrap drp-lst">
                <h4>Session List</h4>
                <div class="add-product">
                    <button data-toggle="modal" SessionId="0" data-target="#myModal" class="pd-setting-ed" style="float:right;margin-top:-30px;"><i class="fa fa-plus" data-toggle="tooltip" title="Add" aria-hidden="true">Add Session</i></button>
                </div>
                <div class="sparkline13-graph">
                    <div class="datatable-dashv1-list custom-datatable-overright">
                        <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" @*data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true"*@
                               data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                            <thead>
                                <tr>
                                    <th>
                                        Session
                                    </th>
                                   

                                    <th>Status</th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.SessionSetups)
                                {

                                    <tr>
                                        <td>
                                            @item.Session
                                        </td>
                                       

                                        <td>
                                            <button class="pd-setting"> @item.Status</button>
                                        </td>
                                        <td>
                                            <button ReferenceType="crud" data-toggle="modal" SessionId="@item.Id" data-target="#myModal" class="pd-setting-ed"><i class="fa fa-pencil-square-o" data-toggle="tooltip" title="Edit" aria-hidden="true"></i></button>
                                            @if (item.IsActive())
                                            {
                                                <button type="button" href="#" class="pd-setting-ed btn" ReferenceType="toggle" data-toggle="modal" SessionId="@item.Id" data-target="#myModal"><i class="fa fa-thumbs-up " data-toggle="tooltip" title="Inactive" aria-hidden="true"></i></button>
                                            }
                                            else
                                            {
                                                <button type="button" href="#" class="pd-setting-ed btn" ReferenceType="toggle" data-toggle="modal" SessionId="@item.Id" data-target="#myModal"><i class="fa fa-thumbs-down" data-toggle="tooltip" title="Active" aria-hidden="true"></i></button>
                                            }
                                            <button data-toggle="modal" SessionId="@item.Id" data-target="#myModal" class="pd-setting-ed"><i class="fa fa-trash" data-toggle="tooltip" title="Trash" aria-hidden="true"></i></button>

                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" id="DeleteBody">

        <!-- /.modal-content -->
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@section Scripts
    {
    <script type="text/javascript">
    $("#myModal").on('show.bs.modal', function (ke)
    {
        const SessionId = $(ke.relatedTarget).attr('SessionId');
        const type = $(ke.relatedTarget).attr('ReferenceType');
        var url = '@Url.Action("Delete","Session")' + "?id=" + SessionId;
        if (SessionId > 0) {
            if (type == null) {
                var url = '@Url.Action("Delete","Session")' + "?id=" + SessionId;
                $("#DeleteBody").load(url, function () {

                    $("#myModal").modal('show');
                });
            }
            else {
                if (type == "crud") {
                    var url = '@Url.Action("Update", "Session")' + "?id=" + SessionId;
                    $("#DeleteBody").load(url, function () {

                        $("#myModal").modal('show');
                    });
                }
                else if (type == "toggle") {
                    var url = '@Url.Action("ToggleStatus", "Session")' + "?id=" + SessionId;
                    $("#DeleteBody").load(url, function () {

                        $("#myModal").modal('show');
                    });
                }
            }
        }
        else {
            var url = '@Url.Action("Create", "Session")';
            $("#DeleteBody").load(url, function () {

                $("#myModal").modal('show');
            });
        }
    })
    </script>
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    'use strict';
    $(window).on('load', function () {
        function notify(message,type) {
            $.growl({
                message: message
            }, {
                type: type,
                allow_dismiss: false,
                label: 'Cancel',
                className: 'btn-xs btn-inverse',
                placement: {from: 'top', align: 'right'},
                delay: 2500,
                animate: { enter: 'animated rotateIn', exit: 'animated rotateIn'},
                offset: {x: 30,y: 30}
            });
        };
        notify('@ViewBag.Message','success');
    });
    </script>
}

 

@if (ViewBag.Messege != null)
{
    <script type="text/javascript">
    'use strict';
    $(window).on('load', function () {
        function notify(messege,type) {
            $.growl({
                message: messege
            }, {
                type: type,
                allow_dismiss: false,
                label: 'Cancel',
                className: 'btn-xs btn-inverse',
                placement: {from: 'top', align: 'right'},
                delay: 2500,
                animate: { enter: 'animated rotateIn', exit: 'animated rotateIn'},
                offset: {x: 30,y: 30}
            });
        };
        notify('@ViewBag.Messege','danger');
    });
    </script>
}