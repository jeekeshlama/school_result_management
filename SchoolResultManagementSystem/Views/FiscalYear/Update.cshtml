@model FiboOffice.Src.Dto.FiscalYearDto
@{
Layout = "~/Views/Shared/_Layout.cshtml";
ViewBag.Message = "Update";
}


   <form id="add-department" asp-action="Create" asp-controller="FiscalYear" method="post" class="add-department">

 <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="product-payment-inner-st">
                <ul id="myTabedu1" class="tab-review-design">
                    <li class="active"><a href="#BasicDetails"> Add Fiscal Year</a></li>
                </ul>


                <div id="myTabContent" class="tab-content custom-product-edit">
                    <div class="product-tab-list tab-pane fade active in" id="BasicDetails">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="review-content-section">
                                     <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label>Start Date</label>
                                                <input type="text" asp-for="StartDate" class="form-control  nepali-datepicker" id="StartDate" placeholder="Enter Begining Date" required autocomplete="off" />
                                           </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12"> <div class="form-group">
                                            <label>End Date</label>
                                                <input type="text" asp-for="EndDate" class="form-control nepali-datepicker" id="EndDate" placeholder="Enter Closing Date" required autocomplete="off" />
                                        </div>
                                        </div>
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-12">
                            <div class="payment-adress" style="float:right">
                                <button type="submit" class="btn btn-success"><i class="fa fa-check edu-checked-pro">Submit</i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>  </form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
 <link rel="stylesheet" href="~/nepali.datepicker.v3.6 (1)/css/nepali.datepicker.v3.6.min.css" />
<script src="~/nepali.datepicker.v3.6 (1)/js/nepali.datepicker.v3.6.min.js"></script>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        'use strict';
        $(window).on('load', function () {
            function notify(message) {
                $.notify({
                    message: message,
                    type: 'inverse',
                    allow_dismiss: false,
                    label: 'Cancel',
                    className: 'btn-xs btn-inverse',
                    placement: { from: 'bottom', align: 'right' },
                    delay: 2500,
                    animate: { enter: 'animated fadeInRight', exit: 'animated fadeOutRight' },
                    offset: { x: 30, y: 30 }
                });
            };
            /**/
            notify('@ViewBag.Message', 'success');
        /**/
        });
    </script>
}
