@model FiboSchool.Src.ViewModel.SubjectViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "subjectinfo";
    int sn = 0;
}
<div class="row">
             <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="breadcome-list">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="breadcome-heading">
                                            <form role="search" class="sr-input-func">
@*                                               // <input type="text" placeholder="Search..." class="search-int form-control">
                                                <a href="#"><i class="fa fa-search"></i></a>*@
                                            </form>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <ul class="breadcome-menu">
                                            <li><a href="#"> Subject Details</a> <span class="bread-slash"><i class="fas fa-arrow-left"></i></span>
                                            </li>
                                            <li><span class="bread-blod">Subjects  </span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
        </div>
<style type="text/css">


    * {
        margin: 0px;
        padding: 0px;
    }

    body {
        font-family: arial;
    }

    .main {
        margin: 2%;
    }

    .card {
        width: 20%;
        display: inline-block;
        box-shadow: 2px 2px 20px black;
        border-radius: 5px;
        margin: 2%;
    }

    .title {
        text-align: center;
        padding: 10px;
    }

    h1 {
        font-size: 20px;
    }

    .des {
        padding: 3px;
        text-align: center;
        padding-top: 10px;
        border-bottom-right-radius: 5px;
        border-bottom-left-radius: 5px;
    }

    button {
        margin-top: 40px;
        margin-bottom: 10px;
        background-color: white;
        border: 1px solid black;
        border-radius: 5px;
        padding: 10px;
    }

        button:hover {
            background-color: black;
            color: white;
            transition: .5s;
            cursor: pointer;
        }
</style>

<div class="main">
    @foreach (var item in Model.classes)
    {

        <div class="card">
            <div class="title">
                <h1>
                    @item.Name
                </h1>
            </div>
            <div class="des">
                <table>
                    <tr>
                        <td colspan="2" style="text-align:left;">
                            @foreach (var items in Model.Subjects.Where(x => x.ClassId == item.Id))
                            {
                                sn++;

                                <p>@sn .  @items.SubjectName</p>
                            }
                            <br /><br />
                            <br />
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        sn = 0;

       
    }
</div>
