@model FiboSchool.Src.Dto.SubjectDto
@{
    Layout = null;
    ViewBag.Title = "Create";
}

<form name="myForm" asp-action="Create" asp-controller="Subject" method="post" id="messageModal"  novalidate>
    @Html.AntiForgeryToken()
      <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="product-payment-inner-st">
            <ul id="myTabedu1" class="tab-review-design">
                <li class="active"><a href="#BasicDetails"> Add Subject </a></li>
            </ul>


            <div id="myTabContent" class="tab-content custom-product-edit">
                <div class="product-tab-list tab-pane fade active in" id="BasicDetails">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="review-content-section">
                                    @Html.AntiForgeryToken()

                                <div class="row content-error">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label for="Year">Select Class</label>
                                            <select asp-for="ClassId" asp-items="Model.ClassSetupList" class="form-control ClassSetupId" id="ClassSetupId" required>
                                                <option value="0">--Select Class--</option>
                                            </select>


                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group">
                                            <label>Subject Name</label>
                                            <input type="text" asp-for="SubjectName" class="form-control" id="Name" autocomplete="off" placeholder="Subject." required>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label>Abbreviation</label>
                                            <input type="text" asp-for="Abbreviation" class="form-control" id="Name" autocomplete="off" placeholder="Abbreviation." required>
                                        </div>
                                    </div>
                                    @Html.ValidationMessage("CustomError", null, new { @class = "text-danger" })

                                </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="payment-adress" style="float:right">
                                                <button class="btn btn-success" type="submit" href="#"><i class="fa fa-check edu-checked-pro">Submit</i></button>
                                <button class="btn btn-danger" type="submit" href="#"><i class="fa fa-times edu-danger-error"data-dismiss="modal">Cancel</i></button>
                                           
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
   
    function validateForm() {
        let x = document.forms["myForm"]["Name"].value;
        if (x == "") {
            alert("Block must be filled out");
            return false;
        }
    }
</script>



