@model FiboSchool.Src.Dto.SchoolSetupDto
@{
    Layout =null;
    ViewBag.Title = "Update";
}

<form asp-action="Update" asp-controller="School" method="post">
     <input type="hidden" asp-for="Id" />
    @Html.AntiForgeryToken()
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-close-area modal-close-df">
            </div>
            <div class="modal-body">
                <h2>Create School</h2>
                <div class="form-group-inner">
                    <label>School Name</label>
                    <input type="text" asp-for="SchoolName" class="form-control"  autocomplete="off" placeholder="Enter Your School Name." required />
                </div>
                <div class="form-group-inner">
                    <label>School Slogan:</label>
                    <input type="text" asp-for="SchoolSlogan" class="form-control"  autocomplete="off" placeholder="Enter Your School Slogan." required />


                </div>
                <div class="form-group-inner">
                    <label>Address:</label>
                    <input type="text" asp-for="Address" class="form-control" autocomplete="off" placeholder="Enter Your School Address." required />


                </div>
            </div>
            <div class="modal-footer info-md">
                <button class="btn btn-success" type="submit" href="#"><i class="fa fa-check edu-checked-pro">Submit</i></button>

                                <button class="btn btn-danger" type="submit" href="#"><i class="fa fa-times edu-danger-error"data-dismiss="modal">Cancel</i></button>
            </div>
        </div>
    </div>

</form>
<script type="text/javascript">
    $(function () {
        Array.prototype.filter.call($('.frmValidation'), function (form) {
            $('#btnSubmit').click(function () {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                    form.classList.add('was-validated');
                    return false;
                }
                else {
                    return true;
                }


            });
        });
    });

</script>
