@model FiboUser.Src.ViewModel.AccountViewModel.UpdateViewModel
@{
}
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Update User Information</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
                <li class="breadcrumb-item active">Register </li>
            </ol>
        </div>
    </div>
</div>
<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <form class="form-horizontal form-material" id="loginform" asp-action="Update" asp-controller="Account">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <div class="col-xs-12">
                        <label>User Name</label>
                        <input class="form-control" asp-for="UserName" type="text" required="" placeholder="Name" autocomplete="off">
                    </div>
                </div>
                <div class="form-group" id="myDIV" style="display:none;text-align:left;font-family: cursive;font-size:14px">
                    <label class="text-danger">UserName must contain atleast 8 characters!!!</label>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <label>Email Address</label>
                        <input class="form-control" asp-for="EmailAddress" type="email" required="" placeholder="Email" autocomplete="off">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-4">
                        <button class="btn btn-success text-uppercase waves-effect waves-light btnRegister" type="submit">SUbmit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>