@model FiboInfraStructure.Entity.FiboOffice.Office

@{ Layout = null; }
<form asp-action="DeleteConfirmed" asp-controller="Office">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Id)
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@Model.Name</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="ti-close"></i></span></button>
        </div>
        <div class="modal-body">
            <p>Are You Sure to Delete @Model.Name?</p>
        </div>
        <div class="modal-footer">
            <div class="btn-group-sm">
                <button type="button" class="btn  btn-secondary" data-dismiss="modal"><i class="ti-close"></i> Cancel</button>
                <button type="submit" class="btn  btn-danger"><i class="ti-trash"></i> Delete Confirm</button>
            </div>
        </div>
    </div>
</form>
