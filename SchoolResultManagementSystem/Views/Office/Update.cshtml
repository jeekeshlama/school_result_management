@model FiboOffice.Src.Dto.OfficeDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create";
}
    <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="product-payment-inner-st">
            <ul id="myTabedu1" class="tab-review-design">
                <li class="active"><a href="#BasicDetails">Office Update</a></li>

            </ul>
            <div id="myTabContent" class="tab-content custom-product-edit">
                <div class="product-tab-list tab-pane fade active in" id="BasicDetails">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="review-content-section">
                                <form id="add-department" asp-action="Update" asp-controller="Office" method="post" class="add-department">
                                    <input asp-for="Id" type="hidden" />
                                     @Html.AntiForgeryToken()
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label>Name</label>
                                                <input name="Name" type="text" asp-for="Name" class="form-control" placeholder="Name">
                                            </div>
                                            <div class="form-group">
                                                                                                <label>PhoneNo</label>

                                                <input name="Phonenumber" type="text" asp-for="PhoneNo" autocomplete="off" class="form-control" placeholder=" Phone Number">
                                            </div>
                                            <div class="form-group">
                                                                                                <label>Email</label>

                                                <input type="text" asp-for="Email" placeholder=" Email" autocomplete="off" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                                                                <label>PANNo</label>

                                                <input type="text" name="PAN Number" asp-for="PANNo" placeholder=" PAN Number" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                                                                <label>FAX No</label>

                                                <input type="text" name="FAX" asp-for="FAX" placeholder=" FAX" class="form-control">

                                            </div>
                                            <div class="form-group">
                                                                                                <label>OfficeLogo</label>

                                                <input type="text" name="OfficeLogo" asp-for="OfficeLogo" placeholder="OfficeLogo" class="form-control">

                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="payment-adress">
                                                <button type="submit" style="float:right" class="btn btn-primary waves-effect waves-light">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
