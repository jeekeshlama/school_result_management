@model FiboAddress.Src.Dto.LocalLevelDto
@{
    Layout = null;
    ViewBag.Title = "Create";
}

<form name="myForm" asp-action="Create" asp-controller="LocalLevel" method="post" id="messageModal" onsubmit="return validateForm()" novalidate>
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="product-payment-inner-st">
                <ul id="myTabedu1" class="tab-review-design">
                    <li class="active"><a href="#BasicDetails"> Add LocalLevel </a></li>
                </ul>


                <div id="myTabContent" class="tab-content custom-product-edit">
                    <div class="product-tab-list tab-pane fade active in" id="BasicDetails">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="review-content-section">
                                    @Html.AntiForgeryToken()

                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label>Name</label>
                                                <input type="text" asp-for="Name" class="form-control" id="Name" autocomplete="off" placeholder="Enter a LocalLevel." required />


                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="form-group">
                                                <label>District</label>
                                                <select asp-for="DistrictId" class="form-control" asp-items="Model.DistrictList" autocomplete="off" required="">
                                                </select>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="payment-adress" style="float:right">
                                                <button class="btn btn-success" type="submit" href="#"><i class="fa fa-check edu-checked-pro">Submit</i></button>
                                                <button class="btn btn-danger" type="submit" href="#"><i class="fa fa-times edu-danger-error" data-dismiss="modal">Cancel</i></button>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
    'use strict';
    $(window).on('load', function () {
        function notify(message) {
            $.notify({
                message: message,
                type: 'inverse',
                allow_dismiss: false,
                label: 'Cancel',
                className: 'btn-xs btn-inverse',
                placement: { from: 'bottom', align: 'right' },
                delay: 2500,
                animate: { enter: 'animated fadeInRight', exit: 'animated fadeOutRight' },
                offset: { x: 30, y: 30 }
            });
        };
        /**/
        notify('@ViewBag.Message', 'success');
    /**/
    });
    </script>
}

<script type="text/javascript">
    function validateForm() {
        let x = document.forms["myForm"]["Name"].value;
        if (x == "") {
            alert("Block must be filled out");
            return false;
        }
    }
</script>
