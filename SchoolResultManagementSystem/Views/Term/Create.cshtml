@model FiboSchool.Src.Dto.TermDto
@{
    Layout = null;
    ViewBag.Title = "Create";
}

<form name="myForm" asp-action="Create" asp-controller="Term" method="post" id="messageModal" onsubmit="return validateForm()" novalidate>
    @Html.AntiForgeryToken()
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-close-area modal-close-df">
            </div>
            <div class="modal-body">
                <h2>Create Term</h2>
                <div class="form-group-inner">
                    <label>Name</label>
                    <input type="text" asp-for="Name" asp-validation-for="Name" class="form-control" id="Name" autocomplete="off" placeholder="Enter a Class." required />
                </div>
            </div>

            <div class="modal-footer info-md">
                <a class="btn btn-success" type="submit" data-dismiss="modal" href="#">Cancel</a>
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
        </div>
    </div>
</form>

